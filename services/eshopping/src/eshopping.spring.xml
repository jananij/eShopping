<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<beans xsi:schemaLocation="http://schema.cloudfoundry.org/spring http://schema.cloudfoundry.org/spring/cloudfoundry-spring-0.8.xsd http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd" xmlns="http://www.springframework.org/schema/beans" xmlns:cloud="http://schema.cloudfoundry.org/spring" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <bean class="com.eshopping.Eshopping" scope="singleton" lazy-init="true" id="eshopping">
        <property name="dataServiceManager">
            <ref bean="eshoppingDataService"/>
        </property>
        <property name="taskManager">
            <ref bean="eshoppingTaskMgr"/>
        </property>
    </bean>
    <bean class="com.wavemaker.runtime.data.spring.WMPropertyPlaceholderConfigurer">
        <property name="ignoreUnresolvablePlaceholders" value="true"/>
        <property name="locations">
            <list>
                <value>classpath:eshopping.properties</value>
            </list>
        </property>
    </bean>
    <bean class="org.springframework.jdbc.datasource.DriverManagerDataSource" lazy-init="true" id="eshoppingDataSource">
        <property name="driverClassName" value="${eshopping.driverClassName}"/>
        <property name="url" value="${eshopping.connectionUrl}"/>
        <property name="username" value="${eshopping.username}"/>
        <property name="password" value="${eshopping.password}"/>
    </bean>
    <bean class="org.springframework.orm.hibernate3.HibernateTransactionManager" lazy-init="true" id="eshoppingTxMgr">
        <property name="sessionFactory">
            <ref bean="eshoppingSessionFactory"/>
        </property>
    </bean>
    <bean class="org.springframework.orm.hibernate3.HibernateTemplate" lazy-init="true" id="eshoppingHibernateTemplate">
        <property name="sessionFactory">
            <ref bean="eshoppingSessionFactory"/>
        </property>
    </bean>
    <bean class="com.wavemaker.runtime.data.spring.ConfigurationAndSessionFactoryBean" lazy-init="true" id="eshoppingSessionFactory">
        <property name="name" value="eshopping"/>
        <property name="dataSource" ref="eshoppingDataSource"/>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">${eshopping.dialect}</prop>
                <prop key="hibernate.transaction.factory_class">
                    org.hibernate.transaction.JDBCTransactionFactory
                </prop>
                <prop key="hibernate.current_session_context_class">thread</prop>
                <prop key="hibernate.jdbc.batch_size">0</prop>
            </props>
        </property>
        <property name="mappingResources">
            <list>
                <value>com/eshopping/data/Itemorder.hbm.xml</value>
                <value>com/eshopping/data/Product.hbm.xml</value>
                <value>com/eshopping/data/User.hbm.xml</value>
                <value>com/eshopping/data/app-queries.ql.xml</value>
            </list>
        </property>
    </bean>
    <bean class="com.wavemaker.runtime.data.spring.SpringDataServiceManager" lazy-init="true" id="eshoppingDataService">
        <constructor-arg>
            <value>eshopping</value>
        </constructor-arg>
        <constructor-arg>
            <ref bean="eshoppingHibernateTemplate"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="eshoppingTxMgr"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="eshoppingTaskMgr"/>
        </constructor-arg>
        <constructor-arg>
            <map>
                <entry key="useIndividualCRUDOperations" value="false"/>
                <entry key="refreshEntities" value=""/>
            </map>
        </constructor-arg>
    </bean>
    <bean class="com.wavemaker.runtime.data.DefaultTaskManager" lazy-init="true" id="eshoppingTaskMgr"/>
    <bean class="com.wavemaker.runtime.service.events.EventWire" lazy-init="false">
        <property name="serviceWire" ref="eshoppingServiceWire"/>
        <property name="eventListener">
            <bean class="com.wavemaker.runtime.data.DataServiceEventListener"/>
        </property>
    </bean>
    <bean class="com.wavemaker.runtime.service.reflect.ReflectServiceWire" scope="singleton" lazy-init="false" id="eshoppingServiceWire">
        <property name="serviceId" value="eshopping"/>
        <property name="serviceType" ref="DataService"/>
    </bean>
</beans>
